{
  "name": "meshari-ongoing-charity",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:webpack": "next dev",
    "dev:clean": "npm run clean:all && npm run dev",
    "build": "next build",
    "build:turbo": "NEXT_TURBOPACK=1 next build",
    "build:analyze": "ANALYZE=true next build",
    "build:clean": "npm run clean:all && npm run build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "rm -rf .next node_modules package-lock.json .turbo .swc && npm cache clean --force",
    "clean:build": "./scripts/clean-build.sh",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.14",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-jalali": "^4.1.0-0",
    "framer-motion": "^12.23.24",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.546.0",
    "next": "^16.0.0",
    "next-devtools-mcp": "^0.2.1",
    "next-themes": "^0.4.6",
    "postcss": "^8.4.31",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.1.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "next-sitemap": "^4.2.3",
    "sharp": "^0.34.4",
    "typescript": "^5.4.5"
  }
}
